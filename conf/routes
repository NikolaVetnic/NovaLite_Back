# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# user
GET     /users                      controllers.UserController.list()
GET     /users/:id                  controllers.UserController.get(id: Long)
POST    /users                      controllers.UserController.create()
PUT     /users                      controllers.UserController.update()
DELETE  /users/:id                  controllers.UserController.delete(id: Long)

# user requests
GET     /connections                controllers.UserController.listConnections()
GET     /requests/:id               controllers.UserController.listRequests(id: Long)
POST    /requests                   controllers.UserController.sendRequest()
DELETE  /requests/:id0/:id1         controllers.UserController.deleteRequest(id0: Long, id1: Long)
GET     /friendships/:id            controllers.UserController.listFriendships(id: Long)
POST    /friendships                controllers.UserController.acceptRequest()
DELETE  /friendships/:id0/:id1      controllers.UserController.deleteFriendship(id0: Long, id1: Long)

# post
GET     /posts                      controllers.PostController.list()
GET     /posts/:id                  controllers.PostController.get(id: Long)
GET     /posts/user/:ownerId        controllers.PostController.listByOwnerId(ownerId: Long)
POST    /posts                      controllers.PostController.create()
PUT     /posts                      controllers.PostController.update()
DELETE  /posts/:id                  controllers.PostController.delete(id: Long)

# post_reaction
GET     /preact                     controllers.PostReactionController.list()
GET     /preact/p/:postId           controllers.PostReactionController.getByPostId(postId: Long)
GET     /preact/u/:userId/p/:postId controllers.PostReactionController.getByUserIdAndPostId(userId: Long, postId: Long)
POST    /preact                     controllers.PostReactionController.create()
DELETE  /preact/u/:userId/p/:postId controllers.PostReactionController.delete(userId: Long, postId: Long)